.search-form
  = form_with url: search_recipes_path, method: :get, local: true do |search|
    = search.text_field :keyword, placeholder: "レシピ名で検索", class: "search-form"
    = button_tag do
      = icon("fas", "search", class: "search-btn")

.header-btn
  - if user_signed_in?
    = link_to "/users/#{current_user.id}", method: :get, class: "top_icon" do
      = icon("fas", "user-alt", class: "user-btn btn")
    = link_to destroy_user_session_path, method: :delete, class: "top_icon" do
      = icon("fas", "sign-out-alt", class: "sign-out-btn btn")
    
  - else
    = link_to new_user_registration_path, method: :get, class: "top_icon" do
      = icon("fas", "user-plus", class: "user-btn btn")
    = link_to new_user_session_path, method: :get, class: "top_icon" do
      = icon("fas", "sign-in-alt", class: "sign-out-btn btn")