.rank-list
  - @rank.each_with_index do |recipe, rank|
    .rank-box
      .rank-int
        = "#{rank + 1}ä½"
      .rank-name
        = link_to "#{recipe.name}", recipe_path(recipe.id)
        .like
          %div{id: "likes_buttons_#{recipe.id}"}
            = render 'recipes/favorite', {r: recipe}
      .rank-image
        = image_tag recipe.image.thumb.url
        .rank-introduction
          = recipe.introduction
      .user-image
        - if recipe.user.image?
          = image_tag recipe.user.image.thumb.url
        - else
          = image_tag asset_path('default.png')
        .user-name
          = link_to "#{recipe.user.name}", user_path(recipe.user.id)