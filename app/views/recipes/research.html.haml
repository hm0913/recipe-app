.word
.top-list
  - @recipe.order(created_at: :desc).each do |r|
    .top-box
      .top-name
        = link_to "#{r.name}", recipe_path(r.id)
        .like
          %div{id: "likes_buttons_#{r.id}"}
            = render 'favorite', {r: r}
        .top-image
          - if r.image?
            = image_tag r.image.thumb.url
          -else
            = image_tag asset_path('default.png', class: "image")
          .top-introduction
            = r.introduction
        .user-image
          - if r.user.image?
            = image_tag r.user.image.thumb.url
          - else
            = image_tag asset_path('default.png')
          .user-name
            = link_to "#{r.user.name}", user_path(r.user.id)