- if current_user.checked_by?(ingredient.id)
  = link_to "GET!", destroy_buy_item_path(buy_item: {user_id: current_user.id, recipe_id: ingredient.recipe_id, ingredient_id: ingredient.id}), method: :delete, remote: true, class: "delete-ingredient"
- else
  = link_to "GET", create_buy_item_path(buy_item: {user_id: current_user.id, recipe_id: ingredient.recipe_id, ingredient_id: ingredient.id}), method: :post, remote: true, class: "create-ingredient"