.word
  %h1
    みんなのお悩み一覧
.new-path
  = link_to "お悩み相談する", new_trouble_path, class: "trouble_new_link"
.trouble-list
  - @troubles.each do |trouble|
    .trouble-box
      .trouble-title
        = link_to "#{trouble.title}", trouble_path(trouble.id), class: "trouble_detail_link"
      .user-image
        - if trouble.user.image?
          = image_tag trouble.user.image.thumb.url
        - else
          = image_tag asset_path('default.png')
        .user-name
          = link_to "#{trouble.user.name}", user_path(trouble.user.id), class: "user_name_font"
          .time
            = trouble.created_at.strftime("%Y/%m/%d %H:%M:%S")